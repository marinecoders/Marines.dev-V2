---
interface Props {
  text: string
  href: string
}
const { href, text } = Astro.props
---

<button
  type="button"
  class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md bg-red-800 border border-transparent font-semibold text-white hover:ring-2 focus:outline-none focus:ring-2 ring-offset-white focus:ring-red-500 hover:ring-red-500 focus:ring-offset-2 transition-all text-sm dark:focus:ring-offset-gray-800"
>
  <a href={href}>
    {text}
  </a>
</button>
