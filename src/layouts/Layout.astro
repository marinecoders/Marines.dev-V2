---
import SiteBanner from '@components/SiteBanner.svelte';
import SiteNavHeader from '@components/SiteNavHeader.svelte';
import SiteBackgroundImg from '@components/SiteBackgroundImg.svelte';
import '../styles/global.css';
import '../styles/fonts.css';

interface Props {
  title?: string;
  hideBackground?: boolean;
}

const { title = null, hideBackground = false } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="overflow-hidden h-full">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Marine Innovation Unit"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <meta
      property="og:title"
      content="Marine Innovation Unit"
    />
    <meta
      property="og:description"
      content="The Marine Innovation Unit (MIU) is the Marine Corps Reserve's premier innovation organization, focused on developing cutting-edge solutions for the Marine Corps."
    />
    <meta
      property="og:image"
      content="miu.png"
    />
    <title>MIU {title && '-'} {title}</title>
  </head>
  <body class="overflow-auto h-full w-full font-roboto text-white bg-mcswf-red">
    <SiteBanner />
    <SiteNavHeader client:only="svelte" />
    {!hideBackground && <SiteBackgroundImg />}
    <main>
      <slot />
    </main>
  </body>
</html>
